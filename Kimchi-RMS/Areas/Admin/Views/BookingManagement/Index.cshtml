@model List<Booking>

<div class="container-fluid py-4">
    <div class="card border-0 shadow">
        <!-- Header-->
        <div class="card-header bg-primary bg-gradient p-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-white mb-0">
                    <i class="bi bi-bank2"> Booking Directory</i>
                </h2>
            </div>
        </div>
        <!-- Card body -->
        <div class="card-body p-0">
            <!-- Search filter section -->
            <div class="bg-light p-3 border-bottom">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-white">
                                <i class="bi bi-search text-primary"></i>
                            </span>
                            <input type="text" id="searchInput" data-table-id="bookingTable" class="form-control" placeholder="Search bookings...">
                        </div>
                    </div>
                    <!--date range filter section-->
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">From</span>
                            <input type="date" id="startDate" class="form-control" />
                            <span class="input-group-text bg-primary text-white">To</span>
                            <input type="date" id="endDate" class="form-control" />
                            <button id="filterBtn" class="btn btn-outline-primary">Filter</button>
                        </div>
                    </div>
                    <!--filter section-->
                    <div class="col-md-2 mb-3 mb-md-0">
                        <div class="dropdown d-inline-block">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-filter me-2 text-primary"></i>Filter by Status
                            </button>
                            <ul class="dropdown-menu shadow-sm">
                                <li><a class="dropdown-item" role="button" onclick="FilterBookingByStatus()">All Status</a></li>
                                <li><hr class="dropdown-divider"></li>
                                @foreach (var status in Enum.GetValues(typeof(BookingStatus)).Cast<BookingStatus>())
                                {
                                    <li><a class="dropdown-item" role="button" onclick="FilterBookingByStatus('@status')">@status</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Booking Table Container -->
            <div class="row" id="bookingTableItems">
                @if (Model != null)
                {
                    @await Html.PartialAsync("_BookingTablePartial", Model)
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-warning d-flex align-items-center p-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                            <div>The model is null. No menu items to display.</div>
                        </div>
                    </div>
                }
            </div>

      @*       <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center p-3 border-top">
                <div class="text-muted">
                    Showing <span class="fw-medium">@Model.Count</span> menu items
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div> *@
        </div>
    </div>
</div>
<script src="~/js/Search.js"></script>









