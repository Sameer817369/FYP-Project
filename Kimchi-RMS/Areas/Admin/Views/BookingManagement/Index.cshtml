@model List<Booking>

<div class="card w-100 border-0 mt-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Booking List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Booked Date</th>
                    <th>Arrival Time</th>
                    <th>Booking Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {

                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.PhoneNumber</td>
                        <td>@obj.Email</td>
                        <td>@obj.ArrivalDate</td>
                        <td>@obj.ArrivalTime</td>
                        <th>@obj.Status</th>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="BookingManagement" asp-action="BookingComplete" asp-route-bookingId="@obj.Id" class="btn btn-success">Confirm</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>




