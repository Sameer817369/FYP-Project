@model List<Feedback>

<div class="container-fluid py-4">
    <div class="card border-0 shadow">
        <!-- Header-->
        <div class="card-header bg-primary bg-gradient p-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-white mb-0">
                    <i class="bi bi-chat-left-fill me-2"></i>Feedback Directory
                </h2>
            </div>
        </div>

        <!-- Card body -->
        <div class="card-body p-0">
            <!-- Search and filter section -->
            <div class="bg-light p-3 border-bottom">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text bg-white">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" id="searchInput" data-table-id="feedbackTable" class="form-control" placeholder="Search feedbacks...">
                        </div>
                    </div>
                    <!--date range filter section-->
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">From</span>
                            <input type="date" id="startDate" class="form-control" />
                            <span class="input-group-text bg-primary text-white">To</span>
                            <input type="date" id="endDate" class="form-control" />
                            <button id="filterBtn" class="btn btn-outline-primary">Filter</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Feedback Table Container -->
            <div class="row" id="feedbackTableItems">
                @if (Model != null)
                {
                    @await Html.PartialAsync("_FeedbackTablePartial", Model)
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-warning d-flex align-items-center p-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                            <div>The model is null. No menu items to display.</div>
                        </div>
                    </div>
                }
            </div>


