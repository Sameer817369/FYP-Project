@model RoleVM

<div class="container-fluid py-4">
    <div class="card border-0 shadow">
        <!-- Header-->
        <div class="card-header bg-primary bg-gradient p-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-white mb-0">
                    <i class="bi bi-person-plus me-2"></i>Update User
                </h2>
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>

        <!-- Card body -->
        <div class="card-body p-4">
            <form method="post" class="row" id="updateForm">
                <input asp-for="Users.Id" hidden />
                <div class="col-12">
                    <!-- User Role card -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-light py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-briefcase me-2"></i>User Role
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <!-- Role dropdown -->
                                <div class="col-md-12">
                                    <label asp-for="Users.Role" class="form-label">User Role</label>
                                    <select asp-for="Users.Role" asp-items="@Model.RoleList" class="form-select"></select>
                                    <span asp-validation-for="Users.Role" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Personal details card -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-light py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-person-vcard me-2"></i>Personal Information
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <!-- Name input -->
                                <div class="col-md-12">
                                    <label asp-for="Users.Name" class="form-label">Full Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <input asp-for="Users.Name" class="form-control" placeholder="Enter full name" readonly />
                                    </div>
                                    <span asp-validation-for="Users.Name" class="text-danger small"></span>
                                </div>
                                <!-- Email input -->
                                <div class="col-md-6">
                                    <label asp-for="Users.Email" class="form-label">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <input asp-for="Users.Email" class="form-control" placeholder="Enter full name" readonly />
                                    </div>
                                    <span asp-validation-for="Users.Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Users.PhoneNumber" class="form-label">Phone Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <input asp-for="Users.PhoneNumber" class="form-control" placeholder="Enter full name" readonly />
                                    </div>
                                    <span asp-validation-for="Users.PhoneNumber" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Address card -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-light py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-geo-alt me-2"></i>Address Information
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <!-- City input -->
                                <div class="col-md-6">
                                    <label asp-for="Users.City" class="form-label">City</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-building"></i>
                                        </span>
                                        <input asp-for="Users.City" class="form-control" placeholder="Enter city name" readonly />
                                    </div>
                                    <span asp-validation-for="Users.City" class="text-danger small"></span>
                                </div>

                                <!-- Street input -->
                                <div class="col-md-6">
                                    <label asp-for="Users.Address" class="form-label">Street Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-signpost"></i>
                                        </span>
                                        <input asp-for="Users.Address" class="form-control" placeholder="Enter street address" readonly/>
                                    </div>
                                    <span asp-validation-for="Users.Address" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Form actions -->
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Update User
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}