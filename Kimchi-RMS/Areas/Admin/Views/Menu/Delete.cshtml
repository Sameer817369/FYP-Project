@model Menu

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Menu</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data" id="deleteForm">
            <div class="col-10">
                <div class="border p-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" disabled class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Description" disabled class="form-control border-0 shadow" />
                        <label asp-for="Description" class="ms-2"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" disabled class="form-control border-0 shadow" />
                        <label asp-for="Price" class="ms-2"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Category" disabled class="form-control border-0 shadow" />
                        <label asp-for="Category" class="ms-2"></label>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Status" disabled class="form-control border-0 shadow" />
                        <label asp-for="Status" class="ms-2"></label>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ImgUrl" disabled class="form-control border-0 shadow" />
                        <label asp-for="ImgUrl" class="ms-2"></label>
                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="button"
                                    onclick="confirmAction(event, 'deleteForm', 'Delete', 'red', 'darkgreen')"
                                    class="mt-3 btn btn-danger form-control">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Menu" asp-action="Index" class="mt-3 btn btn-outline-secondary border form-control">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Url.Content("~/" + @Model.ImgUrl)" width="100%" alt="Menu Image" style="border:1px solid black; border-radius:10px;" />
            </div>
        </form>
    </div>
</div>

