@model Menu
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Menu</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data" id="updateForm">
            <input asp-for="Id"hidden/>
            <div class="col-10">
                <div class="border p-3">
                    @* <div asp-validation-summary="All"></div> *@
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                        <label asp-for="Description" class="ms-2"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" type="number" class="form-control border-0 shadow" />
                        <label asp-for="Price" class="ms-2"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="Category" class="form-control border-0 shadow" asp-items="Html.GetEnumSelectList<MenuCategory>()">
                            <option>Select Category</option>
                        </select>
                        <label asp-for="Category" class="ms-2"></label>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="Status" class="form-control border-0 shadow" asp-items="Html.GetEnumSelectList<MenuStatus>()">
                            <option>Select Status</option>
                        </select>
                        <label asp-for="Status" class="ms-2"></label>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Image" class="form-control border-0 shadow" />
                        <input asp-for="ImgUrl"hidden class="form-control border-0 shadow" />
                        <label asp-for="ImgUrl" class="ms-2"></label>
                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="button"
                                    onclick="confirmAction(event, 'updateForm', 'Update', 'darkgreen', 'red')"
                                    class="mt-3 btn btn-success form-control"><i class="bi bi-check-circle"></i> 
                                Update
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Menu" asp-action="Index" class="mt-3 btn btn-outline-secondary border form-control"><i class="bi bi-arrow-left-circle"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Url.Content("~/" + @Model.ImgUrl)" width="100%" alt="Menu Image" style="border:1px solid black; border-radius:5px;" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}