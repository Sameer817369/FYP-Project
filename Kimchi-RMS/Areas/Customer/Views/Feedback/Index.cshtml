@model Feedback

<section class="hero-section bg-dark text-white">
    <div class="container-fluid position-relative overflow-hidden">
        <!-- Decorative Elements -->
        <div class="position-absolute end-0 translate-middle-y d-none d-lg-block" style="top:150px;">
            <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
        </div>
        <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
            <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
        </div>
        <div class="d-flex justify-content-center align-items-center mt-5 mb-5">
            <div class="background-filter mt-5 mb-5">
                <h2 class="text-center mb-4 fw-medium">Your Feedback</h2>
                <hr />
                <form method="post" asp-controller="Feedback">
                    <div class="row g-3">
                        <!-- Food Quality -->
                        <div class="col-md-6">
                            <label asp-for="FoodQuality" class="form-label">Food Quality:</label>
                            <select asp-for="FoodQuality" asp-items="Html.GetEnumSelectList<Quality>()" class="form-select">
                                <option value="" disabled selected>Select Food Quality</option>
                            </select>
                        </div>

                        <!-- Service Quality -->
                        <div class="col-md-6">
                            <label asp-for="ServiceQuality" class="form-label">Service Quality:</label>
                            <select asp-for="ServiceQuality" asp-items="Html.GetEnumSelectList<Quality>()" class="form-select">
                                <option value="" disabled selected>Select Service Quality</option>
                            </select>
                        </div>

                        <!-- Comments -->
                        <div class="col-md-12">
                            <label asp-for="Description" class="form-label">Your Comments:</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Please share your experience..."></textarea>
                        </div>
                        <!-- Star Rating -->
                        <div class="col-md-12">
                            <label asp-for="Rating" class="form-label">Your Rating:</label>
                            <div class="star-rating text-center mb-2">
                                @for (int i = 5; i >= 1; i--)
                                {
                                    <input type="radio" id="star-@i" name="Rating" value="@i" />
                                    <label for="star-@i" class="px-1">&#9733;</label>
                                }
                            </div>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <!-- Submit Button -->
                        <div class="col-12">
                            <button type="submit" class="btn-six rounded-2 w-100 p-3 mt-1">Submit Feedback</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
</div>
    <hr class="border-2 border-success" style="margin-bottom:47.5px;" />
</section>
