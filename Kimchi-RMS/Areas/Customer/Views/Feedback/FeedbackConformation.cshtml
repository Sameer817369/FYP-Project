<section class="bg-dark text-white position-relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="position-absolute  end-0 translate-middle-y d-none d-lg-block" style="top:100px;">
        <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
    </div>
    <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
    </div>
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <!-- Card Design -->
                    <div class="card border-0 shadow-lg text-center p-5">
                        <!-- Confirmation Icon -->
                        <div class="text-success mb-4">
                            <i class="bi bi-patch-check-fill display-1"></i>
                        </div>
                        <!-- Heading -->
                        <h2 class="fw-bold display-4 mb-3">Thank You for Your Feedback!</h2>
                        <p class="fw-semibold text-muted mb-4">
                            Your feedback means the world to us! It helps us improve and deliver a better dining experience for every guest.
                        </p>
                        <!-- Divider -->
                        <hr class="my-4">
                        <!-- Buttons Section -->
                        <div class="row g-3">
                            <!-- Browse Menu Button -->
                            <div class="col-md-6">
                                <a asp-area="customer" asp-controller="Home" asp-action="Menu" class="btn-six py-3 px-4 btn-lg rounded-pill w-100 d-block">
                                    <i class="bi bi-cart me-2"></i> Browse Menu
                                </a>
                            </div>
                            <!-- Reservation Button -->
                            <div class="col-md-6">
                                <a asp-area="customer" asp-controller="Booking" asp-action="Index" class="btn-nine py-3 px-4 btn-lg rounded-pill w-100 d-block">
                                    <i class="bi bi-calendar-check me-2"></i> Reservation
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="border-2 border-success mb-5" />
</section>