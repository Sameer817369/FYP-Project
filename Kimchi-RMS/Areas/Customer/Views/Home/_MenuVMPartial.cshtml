@model IEnumerable<Menu>


<div class="row ms-5 overflow-x-hidden">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6 mb-5">
                <div class="card" style="width: 18rem;">
                    <img src="~/@item.ImgUrl" class="card-img-top" style="height: 14rem; width: 18rem;" alt="image">
                    <div class="card-body"> 
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">Price: Rs @item.Price.ToString("#,0.00")</p>
                        <p class="card-text">Category: @item.Category</p>
                        <p class="card-text">Status: @(item.Status == MenuStatus.Not_Available ? "Not Available" : "Available")</p>
                            <form method="post" asp-action="Menu">
                                <input type="hidden" name="menuId" value="@item.Id" />
                                <input type="number" name="count" placeholder="Qunatity" min="1" class=" border border-secondary rounded-1 w-50" /><br />
                                <button type="submit" class=" btn-seven px-5 py-2 rounded-2 mt-3 w-100 btn-click">Add To Cart</button>
                            </form>    
                    </div>
                </div>
            </div>
        } 
    }   
    else
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            <div>
                No Menu To show
            </div>
        </div>
    }
</div>


     




