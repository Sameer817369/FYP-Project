<section class="bg-dark text-white position-relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="position-absolute end-0 translate-middle-y d-none d-lg-block" style="top:100px;">
        <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
    </div>
    <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
    </div>
    <div class="container d-flex flex-column align-items-center justify-content-center min-vh-100 text-center">
        <!--  card  -->
        <div class="card shadow-lg border-0 text-center rounded-3 w-25">
            <div class="bg-danger" style="height: 5px;"></div>
            <!-- Warning icon -->
            <div class="position-relative">
                <div class="position-absolute top-0 start-50 translate-middle">
                    <div class="bg-white rounded-circle p-1 shadow">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
            </div>
            <!-- Card body-->
            <div class="card-body p-3 pt-4 mt-2">
                <h5 class="text-danger fw-bold mb-2">Access Denied</h5>
                <div class="d-flex justify-content-center mb-2">
                    <img src="~/images/error.png" class="img-fluid rounded shadow-sm" alt="Error" style="max-width: 60%;">
                </div>
                <p class="text-muted mb-2 small">You don't have permission to access this page</p>
                <a asp-action="index" asp-controller="home" asp-area="customer" class="badge bg-danger rounded-pill px-3 py-1 text-decoration-none">Go Back!</a>
            </div>
        </div>
    </div>
    <hr class="border-2 border-success mb-5" />
</section>