@model IEnumerable<Menu>

<!-- Menu Listing Section - Dark Theme -->
<section class="bg-dark text-white position-relative overflow-hidden pt-5">
    <!-- Decorative Elements -->
    <div class="position-absolute end-0 translate-middle-y d-none d-lg-block"style="top:300px;">
        <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
    </div>
    <div class="position-absolute end-0 translate-middle-y d-none d-lg-block" style="top:1200px;">
        <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
    </div>
    <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
    </div>
    <div class="position-absolute start-0 translate-middle-y d-none d-lg-block" style="top:600px;">
        <i class="bi bi-circle-fill text-success opacity-15" style="font-size: 150px;"></i>
    </div>

    <div class="container py-5">
        <!-- Header section matching home page style -->
        <div class="d-flex flex-column justify-content-center align-items-center mb-5">
            <div class="d-inline-block bg-success bg-opacity-25 rounded-pill mb-2 px-3 py-2 border border-success border-opacity-50">
                <span class="fw-bold text-success">OUR OFFERINGS <i class="bi bi-stars"></i></span>
            </div>
            <h1 class="display-5 fw-bold mb-3">Explore Our <span class="text-success">Menu</span></h1>
            <div class="mx-auto bg-success" style="width: 50px; height: 3px;"></div>
            <div class="row justify-content-center mt-3">
                <div class="col-md-8">
                    <p class="text-center mb-4">Discover our delicious fusion of Korean and Nepali cuisine, crafted with care using the finest ingredients.</p>
                </div>
            </div>
        </div>

        <!-- Filters & Search -->
        <div class="row mb-4 align-items-center">
            <div class="col-md-4 mb-3 mb-md-0">
                <div class="dropdown d-inline-block">
                    <button class="btn btn-outline-success rounded-pill border-2 dropdown-toggle text-white" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-filter me-2"></i>Filter by Category
                    </button>
                    <ul class="dropdown-menu bg-black bg-opacity-75 shadow-lg border border-success border-opacity-50">
                        <li>
                            <a class="dropdown-item text-white" role="button" onclick="FilterByCategories()"
                               onmouseover="this.classList.add('bg-success')"
                               onmouseout="this.classList.remove('bg-success')">
                                All Categories
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider bg-white bg-opacity-50">
                        </li>
                        @foreach (var category in Enum.GetValues(typeof(MenuCategory)).Cast<MenuCategory>())
                        {
                            <li>
                                <a class="dropdown-item text-white" role="button" onclick="FilterByCategories('@category')"
                                   onmouseover="this.classList.add('bg-success')"
                                   onmouseout="this.classList.remove('bg-success')">
                                    @category
                                </a>
                            </li>
                        }
                    </ul>
                </div>


            </div>
            <div class="col-md-8">
                <div class="input-group">
                    <input id="searchInput" type="search" class="form-control bg-dark text-white border-success" data-table-id="menusTable" placeholder="Search for dishes..." aria-label="Search" />
                    <button type="button" class="btn btn-success">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Menu Items Container -->
        <div class="row" id="menuItems">
            @if (Model != null)
            {
                @await Html.PartialAsync("_MenuVMPartial", Model)
            }
            else
            {
                <div class="col-12">
                    <div class="alert bg-black bg-opacity-50 border border-danger text-white d-flex align-items-center p-4 rounded-3" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-3 fs-4 text-danger"></i>
                        <div>The model is null. No menu items to display.</div>
                    </div>
                </div>
            }
        </div>
    </div>
    <hr class="border-2 border-success mb-5" />
</section>

<script src="~/js/Search.js"></script>


