@model ShoppingCartVM

<div class="container mt-5 mb-5 pt-5">
    <div class="card">
        <!-- Card Header -->
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Shopping Cart</h5>
            <a asp-area="Customer" asp-controller="Home" asp-action="Menu" class="btn-third py-1 rou px-4 rounded-2 btn-click">Continue Ordering</a>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            <div class="row">
                @foreach (var obj in Model.ShoppingCardList)
                {
                    <div class="col-12 mb-4">
                        <div class="card shadow-sm">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="~/@obj.Menu.ImgUrl" class="img-fluid rounded-5 p-2 pb-0" alt="@obj.Menu.Name" style="height: 200px; object-fit: fill; width: 80%;">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@obj.Menu.Name</h5>
                                        <p class="card-text">Rs @obj.Menu.Price.ToString("#,0.00")</p>
                                        <p class="card-text">Quantity: @obj.Count</p>
                                        <p class="card-text">Sub-Total: Rs @((obj.Menu.Price * @obj.Count).ToString("#,0.00"))</p>
                                        <div class="btn-group w-100" role="group">
                                            <a asp-controller="Cart" asp-action="Add" asp-route-cartId="@obj.Id"
                                            class="btn-seven btn-click px-5 py-1 rounded-2 w-100">
                                                <i class="bi bi-plus-circle"></i> Add
                                            </a>
                                            <a asp-controller="Cart" asp-action="Minus" asp-route-cartId="@obj.Id"
                                            class="btn-six btn-click px-5 py-1 rounded-2 mx-2 w-100">
                                                <i class="bi bi-dash-circle"></i> Minus
                                            </a>
                                            <a asp-controller="Cart" asp-action="Remove" asp-route-cartId="@obj.Id"
                                            onclick="confirmRemoveCart(event, '@Url.Action("Remove", "Cart", new { cartId = @obj.Id })')"
                                            class="btn-eight px-5 btn-click  py-1 rounded-2 w-100">
                                                <i class="bi bi-trash"></i> Remove
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Order Summary Section -->
            <div class="row justify-content-end mt-4">
                <div class="col-md-4">
                    <div class="border p-3 rounded bg-light text-center">
                        <h4 class="fw-bold mb-3">Total: Rs @Model.Order.TotalAmount.ToString("#,0.00")</h4>
                        @if(Model == null)
                        {
                            TempData["error"] = "No items in the cart to continue";
                        }
                        else
                        {
                            <a asp-area="Customer" asp-controller="Cart" asp-action="OrderSummary"
                               class="btn-seven px-5 py-2 rounded-2 btn-click">
                                <i class="bi bi-cart-check"></i> Proceed To Checkout
                            </a>  
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
