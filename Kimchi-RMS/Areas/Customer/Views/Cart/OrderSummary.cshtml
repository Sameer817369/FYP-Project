@model ShoppingCartVM
<form method="post">
    <section class="bg-dark text-white position-relative overflow-hidden">
        <!-- Decorative Elements -->
        <div class="position-absolute  end-0 translate-middle-y d-none d-lg-block" style="top:100px;">
            <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
        </div>
        <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
            <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
        </div>
    <div class="container mt-5 mb-5 pb-5">
        <div class="card border-2 border-success">
            <div class="card-header text-white d-flex justify-content-between align-items-center py-3" style="background-color:darkgreen;">
                <h5 class="mb-0 fw-bold"><i class="bi bi-receipt me-2"></i>Order Summary</h5>
                <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn-ten py-1 px-4 rounded-2 btn-click">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to Cart
                </a>
            </div>
            <div class="card-body p-4">
                <div class="row align-items-start">
                    <!-- Order Details Section -->
                    <div class="col-md-8 pe-md-4">
                        <div class="card border-0 shadow-lg bg-light mb-4">
                            <div class="card-header bg-light">
                                <h5 class="text-success mb-0"><i class="bi bi-truck me-2"></i>Order Details</h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="mb-3">
                                    <label for="name" class="form-label fw-medium">Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <input asp-for="Order.Name" type="text" class="form-control" id="name" placeholder="Enter your name" required>
                                    </div>
                                    <span asp-validation-for="Order.Name" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="phone" class="form-label fw-medium">Phone</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                        <input asp-for="Order.PhoneNumber" type="text" class="form-control" id="phone" placeholder="Enter your phone number" required>
                                    </div>
                                    <span asp-validation-for="Order.PhoneNumber" class="text-danger small"></span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="city" class="form-label fw-medium">City</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                                            <input asp-for="Order.City" type="text" class="form-control" id="city" placeholder="City" required>
                                        </div>
                                        <span asp-validation-for="Order.City" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="address" class="form-label fw-medium">Street Address</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                            <input asp-for="Order.Address" type="text" class="form-control" id="address" placeholder="Enter your address" required>
                                        </div>
                                        <span asp-validation-for="Order.Address" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Summary Section -->
                    <div class="col-md-4">
                        <div class="card border-0 bg-light shadow-lg">
                            <div class="card-header bg-light">
                                <h5 class="text-success fw-bold mb-0"><i class="bi bi-cart-check me-2"></i>Order Summary</h5>
                            </div>
                            <div class="card-body p-0">
                                <ul class="list-group list-group-flush">
                                    @foreach (var info in Model.ShoppingCardList)
                                    {
                                        <li class="list-group-item p-3">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0 fw-bold">@info.Menu.Name</h6>
                                                    <p class="mb-0 text-muted">Quantity: <span class="fw-semibold">@info.Count</span></p>
                                                </div>
                                                <div class="text-end">
                                                    <p class="mb-0 text-muted">Price: <span class="fw-semibold">Rs @info.Menu.Price.ToString("#,0.00")</span></p>
                                                        <p class="mb-0 text-muted">Sub-Total: <span class="fw-semibold">Rs @((info.Menu.Price * info.Count).ToString("#,0.00"))</span></p>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                                <div class="card-footer bg-light p-3">
                                    <div class="d-flex justify-content-between fw-bold">
                                        <span class="fs-5">Total</span>
                                        <span class="fs-5 text-success">Rs @Model.Order.TotalAmount.ToString("#,0.00")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end p-3">
                <button type="submit" value="Place Order" class="btn-seven px-5 py-2 rounded-2 btn-click">
                    <i class="bi bi-bag-check me-2"></i>Place Order
                </button>
            </div>
        </div>
    </div>
    </section>
</form>


