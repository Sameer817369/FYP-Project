@model ShoppingCartVM
<form method="post">
    <div class="container mt-5 mb-5 pt-5">
        <div class="card">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Shopping Cart</h5>
                <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn-third py-1 rou px-4 rounded-2 btn-click">Back to Cart</a>
            </div>
            <div class="card-body">
                <div class="row align-items-start">
                    <!-- Order Details Section -->
                    <div class="col-md-8">
                        <h5 class="text-success">Shipping Details:</h5>
                        <form method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input asp-for="Order.Name" type="text" class="form-control" id="name" placeholder="Enter your name"required>
                                <span asp-validation-for="Order.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input asp-for="Order.PhoneNumber" type="text" class="form-control" id="phone" placeholder="Enter your phone number"required>
                                <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="city" class="form-label">City</label>
                                    <input asp-for="Order.City" type="text" class="form-control" id="city" placeholder="City"required>
                                    <span asp-validation-for="Order.City" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="address" class="form-label">Street Address</label>
                                    <input asp-for="Order.Address" type="text" class="form-control" id="address" placeholder="Enter your address"required>
                                    <span asp-validation-for="Order.Address" class="text-danger"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- Order Summary Section -->
                    <div class="col-md-4">
                        <h5 class="text-success fw-bold">Order Summary:</h5>
                        <ul class="list-group mb-3">
                            @foreach (var info in Model.ShoppingCardList)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="my-0 fw-bold">@info.Menu.Name</h6>
                                        <p class="mb-0">Quantity: <span class="fw-bold">@info.Count</span></p>
                                    </div>
                                    <div class="text-end">
                                        <p class="mb-0">Price: <span class="fw-bold">Rs @info.Menu.Price.ToString("#,0.00")</span></p>
                                        <p class="mb-0">Sub-Total: <span class="fw-bold">Rs @(info.Menu.Price * info.Count)</span></p>
                                    </div>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="fw-bold">Total</span>
                                <strong>Rs @Model.Order.TotalAmount.ToString("#,0.00")</strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <button type="submit" value="Place Order" class="btn-seven px-5 py-2 rounded-2 btn-click">Place Order</button>
            </div>
        </div>
    </div>
</form>



