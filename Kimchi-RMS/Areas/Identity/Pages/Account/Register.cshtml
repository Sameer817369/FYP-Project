@page
@model RegisterModel

<section class="bg-dark text-white position-relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
    </div>
    <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
    </div>
<div class="container-fluid mt-5 pb-5" style="z-index:-1;">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">
            <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                <div class="row g-0">
                    <!--Image sections-->
                        <div class="col-lg-5 d-none d-lg-block text-white h-100 position-relative" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/Hero-bg.jpg'); background-size: cover; background-position: center; min-height: 550px;">
                            <div class="position-absolute top-50 start-50 translate-middle text-center text-white p-4">
                                <h2 class="fw-bold mb-3">Kimchi Restaurant</h2>
                                <p class="lead mb-4">Authentic Cuisine</p>
                                <div class="d-flex justify-content-center">
                                    <div class="badge bg-success bg-opacity-75 p-2 mx-1">
                                        <i class="bi bi-star-fill me-1"></i> Banquet Booking
                                    </div>
                                    <div class="badge bg-success bg-opacity-75 p-2 mx-1">
                                        <i class="bi bi-truck me-1"></i> Online Order
                                    </div>
                                </div>
                            </div>
                        </div>

                    <!-- Right side with form -->
                    <div class="col-lg-7">
                        <div class="card-body p-3 p-lg-4">
                            <div class="text-center mb-3">
                                <h2 class="fw-bold">Create Your Account</h2>
                                <p class="text-muted small">Sign up to order online or book a banquet</p>
                            </div>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row g-2">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-2">
                                        <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Full Name" />
                                        <label asp-for="Input.Name">Full Name</label>
                                        <span asp-validation-for="Input.Name" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-2">
                                        <input asp-for="Input.Phonenumber" type="tel" class="form-control" aria-required="true" placeholder="Phone Number" />
                                        <label asp-for="Input.Phonenumber">Phone Number</label>
                                        <span asp-validation-for="Input.Phonenumber" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-2">
                                        <input asp-for="Input.City" class="form-control" autocomplete="city" placeholder="City" />
                                        <label asp-for="Input.City">City</label>
                                        <span asp-validation-for="Input.City" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-2">
                                        <input asp-for="Input.Address" class="form-control" autocomplete="address" placeholder="Street Address" />
                                        <label asp-for="Input.Address">Street Address</label>
                                        <span asp-validation-for="Input.Address" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-2">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email">Email Address</label>
                                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-2">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.Password">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-2">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-12 d-none">
                                    <div class="form-floating mb-2">
                                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                            <option disabled selected>-Select Account Type-</option>
                                        </select>
                                        <label asp-for="Input.Role">Account Type</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button id="registerSubmit" type="submit" class="btn-seven btn-click p-3 rounded-2">Create Account</button>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <p class="text-center mt-3 small">
                                        Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Sign In</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <hr class="border-2 border-success" style="margin-bottom:47.5px;" />
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}