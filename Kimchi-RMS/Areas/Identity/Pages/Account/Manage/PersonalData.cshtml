@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Delete Account";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light d-flex align-items-center">
        <i class="bi bi-person-x me-2 text-danger"></i>
        <h3 class="mb-0 fs-4">Delete Account</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-danger d-flex" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
            <div>
                <h4 class="alert-heading">Warning!</h4>
                <p class="mb-0">This action is permanent and cannot be undone.</p>
            </div>
        </div>

        <div class="card bg-light border-0 mb-4">
            <div class="card-body">
                <h5 class="card-title">What happens when you delete your account:</h5>
                <ul class="mb-0">
                    <li>Your account will be permanently removed from our system</li>
                    <li>You will lose access to all your data and settings</li>
                    <li>You will need to create a new account if you wish to return</li>
                </ul>
            </div>
        </div>

        <div class="d-flex flex-column">
            <div class="mb-4">
                <p class="mb-0">Are you sure you want to delete your account?</p>
            </div>
            <div class="d-flex gap-2">
                <a id="delete" asp-page="DeletePersonalData" class="btn-eight px-4 py-2 btn-click rounded-2">
                    <i class="bi bi-trash me-1"></i> Delete Account
                </a>
            </div>
        </div>
    </div>
</div>
