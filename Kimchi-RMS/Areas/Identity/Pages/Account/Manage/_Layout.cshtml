
@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}
<section class="bg-dark text-white position-relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
    </div>
    <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
    </div>
<div class="container mt-5 mb-5">
    <div class="card bg-dark border-2 border-success shadow-sm">
        <div class="card-header bg-dark border-bottom border-success py-3">
            <h2 class="h4 mb-0 text-white"><i class="bi bi-gear-fill text-success"></i> Account settings</h2>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="sticky-top pt-2" style="top: 1rem;">
                        <partial name="_ManageNav" />
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="bg-white rounded p-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <hr class="border-2 border-success" style="margin-bottom:47.5px;"/>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}