@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill me-2 text-danger"></i>
        <h3 class="mb-0 fs-4">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-danger d-flex" role="alert">
            <i class="bi bi-shield-exclamation me-2 fs-4"></i>
            <div>
                <h4 class="alert-heading">Final Warning</h4>
                <p class="mb-0"><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></p>
            </div>
        </div>

        <div class="card bg-light border-0 mb-4">
            <div class="card-body">
                <h5 class="card-title">The following data will be permanently deleted:</h5>
                <ul class="mb-0">
                    <li>Your personal information</li>
                    <li>Your account settings</li>
                    <li>Your login credentials</li>
                    <li>Any associated data with your account</li>
                </ul>
            </div>
        </div>

        <div>
            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger rounded p-2 bg-danger-subtle mb-4" role="alert"></div>

                @if (Model.RequirePassword)
                {
                    <div class="card border-warning mb-4">
                        <div class="card-header bg-warning-subtle">
                            <h5 class="mb-0 fs-5">Security Verification</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text mb-3">Please confirm your password to proceed with account deletion:</p>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }

                <div class="d-flex gap-2">
                    <button class="btn-eight px-4 py-2 btn-click rounded-2" type="submit">
                        <i class="bi bi-trash-fill me-1"></i> Delete data and close my account
                    </button>
                    <a href="javascript:history.back()" class="btn-ten btn-click px-4 py-2 rounded-2">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
