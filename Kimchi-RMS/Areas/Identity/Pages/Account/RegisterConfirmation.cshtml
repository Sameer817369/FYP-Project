@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
}
<section class="bg-dark text-white position-relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="position-absolute  end-0 translate-middle-y d-none d-lg-block" style="top:100px;">
        <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
    </div>
    <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
    </div>
    <div class="container mb-5 mt-5 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                    <!-- Confirmation Section -->
                    <div class="bg-white">
                        <div class="d-flex flex-column justify-content-center h-100 p-4 p-lg-5">
                            <div class="text-center mb-4">
                                <div class="rounded-circle bg-light p-3 d-inline-flex mb-3">
                                    <i class="bi bi-check-circle-fill text-success fs-1"></i>
                                </div>

                                    <h3 class="fw-bold">Registration Confirmation</h3>
                                    <p class="text-muted">
                                        A confirmation email has been sent to your registered email address.
                                        Please check your inbox and follow the instructions to activate your account.
                                    </p>
                                <div class="alert alert-success bg-success bg-opacity-10 hover-zoom border-success text-success">
                                    <i class="bi bi-envelope-check me-2"></i>
                                    <a href="https://mail.google.com/" target="_blank" rel="noopener" class="text-success fw-semibold text-decoration-none">
                                        Access Gmail to check your confirmation email
                                    </a>
                                </div>
                            </div>
                     
                            <div class="d-grid mt-4">
                                <a asp-page="./Login" class="btn-seven btn-click py-3 rounded-3 fw-semibold text-center">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Log in to your account
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="border-2 border-success mb-5" />
</section>

