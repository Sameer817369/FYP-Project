@page
@model LoginModel

<section class="bg-dark text-white position-relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-25" style="font-size: 200px;"></i>
    </div>
    <div class="position-absolute bottom-0 start-0 d-none d-lg-block">
        <i class="bi bi-circle-fill text-success opacity-10" style="font-size: 150px;"></i>
    </div>
<div class="container mb-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                <div class="row g-0">
                    <!-- Image Section -->
                    <div class="col-md-6 d-none d-md-block">
                        <div class="h-100 position-relative" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/Hero-bg.jpg'); background-size: cover; background-position: center; min-height: 550px;">
                            <div class="position-absolute top-50 start-50 translate-middle text-center text-white p-4">
                                <h2 class="fw-bold mb-3">Kimchi Restaurant</h2>
                                <p class="lead mb-4">Authentic Cuisine</p>
                                <div class="d-flex justify-content-center">
                                    <div class="badge bg-success bg-opacity-75 p-2 mx-1">
                                        <i class="bi bi-star-fill me-1"></i> Banquet Booking
                                    </div>
                                    <div class="badge bg-success bg-opacity-75 p-2 mx-1">
                                        <i class="bi bi-truck me-1"></i> Online Order
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Form Section -->
                    <div class="col-md-6 bg-white">
                        <div class="p-4 p-lg-5">
                            <div class="text-center mb-4">
                                <h3 class="fw-bold">Welcome Back</h3>
                                <p class="text-muted">Please enter your credentials to continue</p>
                            </div>
                            <form id="account" method="post" class="needs-validation">
                                <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" placeholder="name@example.com">
                                    <label asp-for="Input.Email" class="text-muted">
                                        <i class="bi bi-envelope-fill me-1"></i> Email Address
                                    </label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" placeholder="••••••••">
                                    <label asp-for="Input.Password" class="text-muted">
                                        <i class="bi bi-lock-fill me-1"></i> Password
                                    </label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot password?</a>
                                    </div>
                                </div>

                                <div class="d-grid mb-4">
                                    <button class="btn-seven btn-click py-3 rounded-3 fw-bold" type="submit">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold">Create Account</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <hr class="border-2 border-success" style="margin-bottom:47.5px;" />
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}