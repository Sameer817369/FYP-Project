@model List<Menu>
@{
    string title = ViewBag.Title;
}

<div class="col-sm-6 mx-4 mb-6">
    <div class="card shadow-sm p-3">
        <div class="border border-secondary rounded-2 p-5">
            <h3 class="text-center fw-bold text-muted mb-4" style="font-style: italic; font-size:40px">@title</h3>
                <div>
                    @foreach (var item in Model)
                    {
                        <div class="menu-item py-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="fw-bold text-uppercase m-0">@item.Name</h5>
                                    <p class="text-muted small m-0">@item.Description</p>
                                </div>
                            <h5 class="text-dark fw-bold">Rs @item.Price.ToString("#,0.00")</h5>
                            </div>
                        </div>
                        <hr class="my-2 border-secondary opacity-25">
                    }
                </div>
            <div class="d-flex justify-content-center mt-4">
                <a asp-area="Customer" asp-controller="Home" asp-action="Menu" class=" py-2 rounded-2 border btn-third border-black btn-click px-5 shadow-sm">View More</a>
            </div>
        </div>  
    </div>
</div>

