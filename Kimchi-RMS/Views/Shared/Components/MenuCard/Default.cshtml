@model List<Menu>
@{
    string title = ViewBag.Title;
}
<div class="col-md-6 mx-4 mb-6">
    <div class="card border-2 bg-dark border-success shadow-sm p-3">
        <div class=" p-5">
            <h3 class="text-center fw-bold mb-4" style="font-style: italic; font-size:40px; color:antiquewhite">@title</h3>
                <div>
                    @foreach (var item in Model)
                    {
                        <div class="menu-item py-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                <h5 class="fw-bold text-uppercase m-0" style="color:antiquewhite">@item.Name</h5>
                                <p class="small m-0" style="color:antiquewhite">@item.Description</p>
                                </div>
                            <h5 class="fw-bold" style="color:antiquewhite">Rs @item.Price.ToString("#,0.00")</h5>
                            </div>
                        </div>
                    <hr class="my-2 opacity-25" style="border-color:antiquewhite;">
                    }
                </div>
            <div class="d-flex justify-content-center mt-4">
                <a asp-area="Customer" asp-controller="Home" asp-action="Menu" class=" py-3 btn-seven rounded-pill btn-click px-5"><span style="color:antiquewhite;">View Full Menu</span></a>
            </div>
        </div>  
    </div>
</div>

